{
    "name": "vitro",
    "private": true,
    "scripts": {
        "cli": "cross-env NODE_ENV=test node -r sucrase/register packages/cli/src/main.ts",
        "start": "tsc -b -w",
        "test": "lerna exec --ignore example* --ignore website -- yarn test",
        "examples": "VERBOSE=1 yarn --cwd examples/renderer dev",
        "publ": "yarn build && yarn lerna publish -y patch",
        "build": "yarn build:cjs && yarn build:esm",
        "build:cjs": "lerna exec --scope @vitro/* 'yarn tsc -b'",
        "build:esm": "lerna exec --parallel --scope '@vitro/ui' -- yarn build"
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "examples/*",
            "website"
        ],
        "nohoist": [
            
            
        ]
    },
    "devDependencies": {
        "lerna": "^3.22.1",
        "syncpack": "^5.0.3"
    },
    "dependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    }
}
