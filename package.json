{
    "name": "vitro",
    "private": true,
    "scripts": {
        "cli": "cross-env VITRO_TESTING=1 node -r sucrase/register packages/cli/src/main.ts",
        "watch": "tsc -b --clean && tsc -b -w",
        "test": "lerna run --scope @vitro/* --ignore website test",
        "examples": "yarn --cwd examples/renderer dev",
        "examples:build": "yarn --cwd examples/renderer build",
        "publ": "yarn build && yarn lerna publish -y patch",
        "build": "lerna exec --scope @vitro/* 'yarn build'"
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "examples/*",
            "website"
        ],
        "nohoist": []
    },
    "devDependencies": {
        "lerna": "^3.22.1",
        "syncpack": "^5.0.3"
    },
    "dependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    }
}
