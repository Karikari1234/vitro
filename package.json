{
    "name": "vitro",
    "private": true,
    "scripts": {
        "cli": "cross-env VITRO_TESTING=1 node -r sucrase/register packages/cli/src/main.ts",
        "watch": "tsc -b --clean && tsc -b -w",
        "test": "ultra -r --serial test",
        "depscheck": "ultra  --filter '@vitro/*' -r depcheck",
        "build:examples": "yarn build && yarn vitro build examples --out examples_output",
        "build": "ultra -r --serial -b --filter '@vitro/*' build"
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "examples/*",
            "website"
        ],
        "nohoist": []
    },
    "devDependencies": {
        "@changesets/cli": "^2.12.0",
        "esbuild": "^0.8.39",
        "esbuild-register": "^1.2.1",
        "playwright": "^1.8.0",
        "rollup": "^2.34.0",
        "@jest/types": "^26.6.2",
        "@sucrase/jest-plugin": "^2.0.0",
        "@types/jest": "^26.0.16",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "typescript": "^4.1.2",
        "ultra-runner": "^3.8.0"
    },
    "dependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    }
}
