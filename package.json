{
    "name": "vitro",
    "private": true,
    "scripts": {
        "cli": "cross-env NODE_ENV=test node -r sucrase/register packages/cli/src/main.ts",
        "start": "lerna exec --parallel --ignore example* --ignore website -- tsc -w",
        "example": "cross-env VITRO_TEMPLATE=1 yarn --cwd packages/example dev"
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "website"
        ],
        "nohoist": [
            "**/next"
        ]
    },
    "devDependencies": {
        "lerna": "^3.22.1"
    }
}
